{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <h1 class="title">Your Cart</h1>
                <div class="d-flex cart1">
                <form action="{{ path('clear_cart') }}" method="POST">
                    <button class="btn btn-danger mt-3">Clear Cart</button>
                </form>
                    <button class="btn btn-success mt-3 cart2" onclick="window.location.href='/'">Back</button>
                </div>
                <hr>
                {% if cartItems is empty %}
                    <p>Your cart is empty.</p>
                {% else %}
                    <div class="row">
                        <div class="col-md-8">
                            {% for cartItem in cartItems %}
                                <div class="row mb-3">
                                    <div class="col-md-4" style=" ">
                                         <img style="box-shadow: 2px 2px 2px 1px rgba(0, 0, 0, 0.2);" src="{{ item.image }}" class="img-fluid" width="300" height="200">
                                    </div>
                                    <div class="col-md-8">
                                        <h3>{{ cartItem.item.getTitle() }}</h3>
                                        <p style="margin-bottom: 25px; display: -webkit-box; -webkit-box-orient: vertical;  overflow: hidden;text-overflow: ellipsis;-webkit-line-clamp: 2; ">{{ cartItem.item.getDescription() }}</p>
                                        <p style="margin-bottom: 5px;">Price: {{ cartItem.item.getPrice() }} UAH</p>
                                        <p><b>Total: {{ cartItem.itemTotal }} UAH</b></p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="col-md-4">
                            <h3>Cart Summary</h3>
                            <table class="table">
                                <tbody>
                                <tr>
                                    <td>Total:</td>
                                    <td><b>{{ cartTotal }} UAH</b></td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

                text-decoration: none;
                color: #333;
                font-weight: bold;
            }

            .goodsHome a:hover {
                color: #ff4500;
            }

            /* styles for the description */
            .desc {
                background-color: #fff;
                padding: 20px;
                margin: 20px;
                border-radius: 5px;
                box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
                line-height: 1.5;
                text-align: justify;
            }

            .desc a {
                text-decoration: none;
                color: #ff4500;
                font-weight: bold;
            }

            .desc a:hover {
                text-decoration: underline;
            }

            .padcart {
                margin-left: 91.5%;
